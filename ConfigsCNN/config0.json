{
    "Lambda": 1,
    "Lr": 0.01,
    "beta": 1,
    "greedytrain": true,
    "nConvLayers": 3,
    "Convolutions": {
        "GlobalParams": {
            "stride": 1,
            "padding": 2,
            "paddingmode": "reflect",
            "triangle": true,
            "whiten": true,
            "batchnorm": true,
            "inhibition": "RePU"
        },
        "Layers": {
            "Conv1": {
                "out_channel": 32,
                "kernel": 5
            },
            "Conv2": {
                "out_channel": 128,
                "kernel": 3
            },
            "Conv3": {
                "out_channel": 512,
                "kernel": 3
            }
        }
    },
    "PoolingBlock": {
        "GlobalParams": {
            "Pooling": true,
            "stride": 1
        },
        "Layers": {
            "Conv1": {
                "Type": "Max",
                "kernel": 4,
                "padding": 1
            },
            "Conv2": {
                "Type": "Max",
                "kernel": 4,
                "padding": 1
            },
            "Conv3": {
                "Type": "Avg",
                "kernel": 2,
                "padding": 0
            }
        }
    },
    "Classifier": {
        "type": "Gradient",
        "out_channel": 10
    },
    "Topdown": false,
    "Rho": 0.001,
    "Eta": 0.1
}